<h3>予約の確認</h3>
 
<table>
  <tr>
    <th>施設名</th>
    <td><%= @room.name %></td>
  </tr>
  <tr>
    <th>施設詳細</th>
    <td><%= @room.detail %></td>
  </tr>
  <tr>
    <th>料金</th>
    <td><%= @room.fee %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @room.address %></td>
  </tr>
  <tr>
  <th>施設画像</th>
  <td>
    <% if @room.img.attached? %>
      <%= image_tag @room.img.variant(resize: "200x150", gravity: "center", crop:"200x150+0+0") %>
    <% elsif @room.img.blank? %>
      <%= image_tag 'room_default', size: "200x150", class: "default_image" %>
    <% end %>
  </td>
  </tr>
</table>

<p><strong>チェックイン日</strong> <%= @reservation.start_at %></p>
<p><strong>チェックアウト日</strong> <%= @reservation.end_at %></p>
<p><strong>宿泊日数</strong> <%= @stay_days %></p>
<p><strong>人数</strong> <%= @reservation.num_of_guests %></p>
<p><strong>支払金額</strong> <%= @sum_fee %></p>

<%= form_for @reservation, url: user_reservations_path(current_user), method: :post do |f| %>
    <%= f.hidden_field :start_at %>
    <%= f.hidden_field :end_at %>
    <%= f.hidden_field :num_of_guests %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit '予約を確定する' %>
<% end %>
  
<%= link_to '予約情報を修正する', room_path(@room.id) %>