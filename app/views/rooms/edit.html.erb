<h1>施設を編集する</h1>

<%= form_with model: @room do |f| %>
    <table>
        <tbody>
            <tr>
                <th><%= f.label :name, "施設名" %></th>
                <td><%= f.text_field :name %></td>
            </tr>
            <tr>
                <th><%= f.label :detail, "施設詳細" %></th>
                <td><%= f.text_area :detail %></td>
            </tr>
            <tr>
                <th><%= f.label :fee, "料金" %></th>
                <td><%= f.number_field :fee %></td>
            </tr>
            <tr>
                <th><%= f.label :address, "住所" %></th>
                <td><%= f.text_field :address %></td>
            </tr>
            <tr>
                <th><%= f.label :img, "施設画像" %></th>
                <td><%= f.file_field :img, accept: "image/jpeg,image/gif,image/png" %></td>
            </tr>

            <% if @room.img.present? %>
            <tr>
              <td><%= f.check_box :remove_img, {}, @room.img.id, false%></td>
              <th><%= f.label :remove_img, "現在登録されている画像を削除する" %></th>
            </tr>
          <% end %>
        </tbody>
    </table>

    <div>
        <ul>
        <li><%= f.submit "編集を完了する"%></li>
        <li><%= link_to "戻る", :back %></li>
        </ul>
    </div>
<% end %>