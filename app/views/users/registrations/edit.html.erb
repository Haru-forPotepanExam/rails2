<h2>プロフィールを編集する</h2>

<%= render "shared/error", obj: @user %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :profile, "自己紹介" %><br />
    <%= f.text_area :profile, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :avatar, "アイコン画像" %><br />
    <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png" %>
  </div>

  <% if @user.avatar.present? %>
    <div class="field">
      <%= f.check_box :remove_avatar, {}, @user.avatar.id, false%>
      <%= f.label :remove_avatar, "現在登録されている画像を削除する" %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>

<%= link_to "戻る", profile_user_path(current_user) %>
